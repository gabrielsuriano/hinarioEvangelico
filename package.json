  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && npm run install:hooks",
    "serve:https": "nuxt dev --https --ssl-cert ./personal/hinarioEvangelico.ts.net.crt --ssl-key ./personal/hinarioEvangelico.ts.net.key",
