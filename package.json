    "pinia-plugin-persistedstate": "^3.2.3",
    "vue": "^3.4.38",
    "vue-router": "^4.4.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@pinia/nuxt": "^0.5.5",
    "@vite-pwa/nuxt": "^1.0.6",
    "serve-handler": "^6.1.6",
    "sharp": "^0.34.4",
